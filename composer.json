{
    "name": "programster/core-libs",
    "type": "library",
    "description": "Core libraries for PHP 7.0+",
    "keywords": ["core","library"],
    "homepage": "https://github.com/programster/package-core-libs",
    "license": "MIT",
    "authors": [
        {
            "name": "Stuart Page",
            "email": "sdpagent@gmail.com",
            "homepage": "https://blog.programster.org",
            "role": "Developer"
        }
    ],
    "require": {
        "php": ">=8.3.0",
        "thecodingmachine/safe": ">=1.3 <2.0.0",
        "ext-fileinfo": "*"
    },
    "require-dev" : {
    },
    "suggest": {
        "ext-sockets": "Allows the use of the networking methods that require sockets.",
        "ext-zip": "Allows the use of methods that assist with using zip file.",
        "ext-openssl": "Allows the use of methods that assist encryption/decryption.",
        "ext-curl": "Facilitates downloads through curl instead of falling back to using file_get_contents."
    },
    "autoload": {
        "psr-4": {
            "Programster\\CoreLibs\\": "src/",
            "Programster\\CoreLibs\\Exceptions\\": "src/exceptions/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Programster\\CoreLibs\\Testing\\": "testing/",
            "Programster\\CoreLibs\\Testing\\Tests\\": "testing/tests/"
        }
    }
}
